package Login;

import java.awt.Container;
import java.awt.Dimension;
import java.awt.FlowLayout;
import java.awt.Frame;
import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

public class RegisterWindow extends Frame {	
	private static final long serialVersionUID = 2L;
	
	private static JLabel label1, labelnick, labelpass, labelIP;
	private static JTextField textfield1, textfield2, textfield3;
	private static JPanel panel1, panel2, panel3, panel4, panel5 ;
	private static JButton create, cansel;
	public static JFrame frameR = new JFrame("Register New Account");
	

	public static void addComponentsToPane(Container pane){
		pane.setLayout(new GridLayout(5,1));
		
//		JLabel label1 = new JLabel("<html>Registering an account is a rather painless process."  + 
//									"<ul> Just fill in the form bellow.");
		
		JLabel label1 = new JLabel("Fill in the form bellow.");

		JPanel panel1 = new JPanel(new FlowLayout());
		// Верхняя панель с надписью
		panel1.add(label1);
		pane.add(panel1);
		
		JLabel labelnick = new JLabel("Nickname : ");
    	JTextField textfield1 = new JTextField(10);
    	JPanel panel2 = new JPanel(new FlowLayout());
    	// Панель с никнеймом и полем для ввода
    	panel2.add(labelnick);
    	panel2.add(textfield1);
    	pane.add(panel2);
    	
    	JLabel labelpass = new JLabel("Password : ");
    	JTextField textfield2 = new JTextField(10);
    	JPanel panel3 = new JPanel(new FlowLayout());
    	// Панель с никнеймом и полем для ввода
    	panel3.add(labelpass);
    	panel3.add(textfield2);
    	pane.add(panel3);
    	
    	JLabel labelIP = new JLabel("IP address : ");
    	JTextField textfield3 = new JTextField(10);
    	JPanel panel4 = new JPanel(new FlowLayout());
    	// Панель с никнеймом и полем для ввода
    	panel4.add(labelIP);
    	panel4.add(textfield3);
    	pane.add(panel4);
    	
    	JButton create = new JButton("Create");
    	create.setPreferredSize(new Dimension(100,25));
    	JButton cansel = new JButton("Cancel");
    	cansel.setPreferredSize(new Dimension(100,25));
    	
    	JPanel panel5 = new JPanel(new FlowLayout());
    	// Панель с кнопкой Login и кнопкой Register
   	     	
    	panel5.add(create);
    	panel5.add(cansel);
    	pane.add(panel5);
		
    	create.addActionListener(new ActionListener(){
	    	  public void actionPerformed(ActionEvent e) {   
	    		  
	    	  }
	    	});	
		
		
    	cansel.addActionListener(new ActionListener(){
	    	  public void actionPerformed(ActionEvent e) { 
	    		  LoginWindow.frameL.setVisible(true);
	    		  RegisterWindow.frameR.setVisible(false);
	    	  }
	    	});
	}
	
    public static void createAndShowGUI() { 
        //JFrame.setDefaultLookAndFeelDecorated(true); 
 
         
        frameR.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE); 
        LoginWindow.frameL.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
 
        addComponentsToPane(frameR.getContentPane()); 
         
        frameR.setSize(400, 220);
        frameR.setLocationRelativeTo(null);   
        frameR.setResizable(false);
        frameR.setVisible(false); 
    }
	
//	public static void main(String[] args) {
//		javax.swing.SwingUtilities.invokeLater(new Runnable() { 
//            public void run() { 
//                createAndShowGUI(); 
//            } 
//        });
//
//	}

}
